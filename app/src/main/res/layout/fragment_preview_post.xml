<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".preview_post.PreviewPostFragment">
    <ImageView
        android:id="@+id/swipe"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:maxHeight="400dp"
        android:layout_width="match_parent"
        android:layout_height="350dp"/>

    <TextView
        android:id="@+id/txt_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/swipe"
        android:layout_alignEnd="@id/swipe"
        android:textSize="16sp"
        android:fontFamily="@font/alegreya"
        android:textStyle="bold"
        android:textColor="@color/white"

        android:layout_margin="10dp"
        />

    <EditText
        android:id="@+id/edt_final_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:maxHeight="250dp"
        android:autofillHints=""
        android:background="@drawable/edittext_wrapper"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/swipe"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        android:textSize="18sp"
        android:fontFamily="@font/alegreya"
        android:inputType="textMultiLine|textVisiblePassword"/>

</RelativeLayout>